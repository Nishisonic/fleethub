{
  "ts-node": {
    "swc": true,
    "moduleTypes": {
      "scripts/**/*": "esm"
    },
    "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2020",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  },
  "compilerOptions": {
    "allowJs": false
  },
  "extends": "./tsconfig.base.json",
  "include": ["packages", "scripts", "crates"]
}
