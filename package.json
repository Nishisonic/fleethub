{
  "name": "fleethub",
  "version": "1.10.3",
  "private": true,
  "license": "UNLICENSED",
  "author": "madono (https://github.com/MadonoHaru) <madonoharu@gmail.com>",
  "workspaces": [
    "packages/*",
    "crates/fleethub-core"
  ],
  "scripts": {
    "build": "yarn build:site",
    "build:admin": "yarn workspace @fh/admin build",
    "build:core": "bash scripts/build-core.sh",
    "build:kcs": "yarn workspace kcs build",
    "build:site": "yarn workspace @fh/site build",
    "build:utils": "yarn workspace @fh/utils build",
    "dev": "yarn workspace @fh/site dev",
    "postinstall": "husky install & yarn setup",
    "lint": "eslint --cache packages && yarn tsc --incremental --noEmit",
    "setup": "(yarn build:utils & yarn build:kcs) && yarn build:admin",
    "site": "yarn workspace @fh/site",
    "start": "yarn workspace @fh/site start",
    "test": "jest",
    "ts": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node-esm",
    "update:storage": "yarn ts scripts/updateStorage",
    "update:locales": "yarn ts scripts/updateLocales",
    "update:maps": "yarn ts scripts/updateByKcnav",
    "update:types": "yarn ts scripts/updateTypes",
    "utils": "yarn workspace @fh/utils"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": "prettier --cache --write",
    "*.{js,jsx,ts,tsx}": "eslint --cache --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@fh/admin": "workspace:*",
    "@fh/utils": "workspace:*",
    "@next/eslint-plugin-next": "^12.3.0",
    "@swc/core": "^1.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fleethub-core": "npm:latest",
    "fs-extra": "^10.1.0",
    "got": "12.4.1",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "kc-tools": "^1.1.0",
    "lint-staged": "^13.0.3",
    "listr2": "^5.0.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "4.8.3"
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "npm": "Please use yarn"
  }
}
